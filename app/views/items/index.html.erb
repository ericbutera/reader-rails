<% for feed,items in @feed_items %>
<div><h1><%= "#{feed.title}" %></h1></div>

  <div class="collapse">
  <% for item in items %>
    <div class="accordion-group">
      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-<%= "#{item.id}" %>" href="#collapse-<%= "#{item.id}" %>">
          <%= "#{item.title}" %>
          (Viewed: <%= "#{item.is_viewed}" %>)
          (Added: <%= "#{item.added}" %>)
        </a>
      </div>
      <div id="collapse-<%= "#{item.id}" %>" class="accordion-body collapse in">
        <div class="accordion-inner">
          <strong><a href="<%= "#{item.url}" %>"><%= "#{item.title}" %></a></strong><br />
          <%= raw("#{item.sanitized}") %>
        </div>
      </div>
    </div>
  <% end %>
  </div>

<% end %>


<script type="text/javascript">
  $(".collapse").collapse();
</script>


